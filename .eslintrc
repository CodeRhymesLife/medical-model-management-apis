{
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "no-unexpected-multiline": 2,
    "no-underscore-dangle": ["error", {"allow": ["_id"] }],
    "linebreak-style": 0,
    "indent": 2,
  },
  "env": {
    "node": true,
    "mocha": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": [
    "plugin:flowtype/recommended",
    "airbnb-base"
  ],
  "settings": {
    "polyfills": ["fetch"]
  }
}
